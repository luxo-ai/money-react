{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "module": "esnext",
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "noUncheckedSideEffectImports": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
  },
  "include": [
    "src/**/*.tsx",
    "src/**/*.ts",
    "declarations.d.ts",
    "vite.config.ts",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/node_modules",
    "**/dist"
  ]
}